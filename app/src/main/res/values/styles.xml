<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="android:colorButtonNormal">#F2EC00</item>
        <item name="shapeAppearanceSmallComponent">@style/shape_appearance</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">#121212</item>
    </style>


    <style name="text_style" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="fontFamily">@font/cyberpunk</item>

    </style>

    <style name="tollbar_style_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="titleTextAppearance">@style/text_style</item>
    </style>


    <style name="buttonf" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
    <item name="shapeAppearanceSmallComponent">@style/shape_appearance</item>

    </style>


    <style name="edit_text_style" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="boxStrokeColor">#52F1FD</item>
        <item name="hintTextColor">#52F1FD</item>
        <item name="colorControlActivated">#52F1FD</item>
        <item name="colorControlHighlight">#52F1FD</item>

    </style>


    <style name="shape_appearance" parent="@style/ShapeAppearance.MaterialComponents.SmallComponent">
    <item name="cornerFamily">cut</item>
    <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">2dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeBottomLeft">2dp</item>
    </style>

</resources>